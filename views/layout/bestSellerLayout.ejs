<div class="js-slide">
    <ul class="row list-unstyled products-group no-gutters mb-0 overflow-visible">
        <% for(let i=index; i<length; i++){ %>
            <li class="col-md-3 col-lg-3 product-item product-item__card pb-2 mb-2 pb-md-0 mb-md-0 border-bottom border-md-bottom-0">
                <div class="product-item__outer h-100">
                    <div class="product-item__inner p-md-3 row no-gutters">
                
                        <div class="col col-lg-auto product-media-left">
                            <% for(let picture of pictures){  
                                if(picture.productId === products[i].id){ %>
                                    <a href='/products/<%= products[i].id %>' class="d-block text-center"><img class="img-fluid" src='<%= picture.image %>'  alt="Image Description"></a>
                                <% break;}
                            }%>                        
                        </div>
                        <div class="col product-item__body pl-2 pl-lg-3 mr-xl-2 mr-wd-1">
                            <div class="mt-3">
                                <h5 class="mb-1 product-item__title"><a href='/products/<%= products[i].id %>' class="text-blue font-weight-bold"><%= products[i].product_name %></a></h5>
                            </div>
                            <div class="flex-center-between mb-1">
                                <div class="prodcut-price">
                                    <div class="text-gray-100">Â¢<%= products[i].product_price  %>.00</div>
                                </div>
                                <div class="d-none d-xl-block prodcut-add-cart">
                                    <a href='/products/<%= products[i].id %>' class="btn-add-cart btn-primary transition-3d-hover"><i class="ec ec-add-to-cart"></i></a>
                                </div>
                            </div>
                            <% if(user.username){  %> 
                                <div class="product-item__footer">
                                    <div class="border-top pt-2 flex-center-between flex-wrap">
                                        <a href="/like/<%= products[i].id %>" class="text-gray-6 font-size-13" id="like-product"><i class="ec ec-favorites mr-1 font-size-17"></i> Like the product</a>
                                    </div>
                                </div>
                            <%} %>
                        </div>
                    </div>
                </div>
            </li>
       <% } %> 
    </ul>
</div>